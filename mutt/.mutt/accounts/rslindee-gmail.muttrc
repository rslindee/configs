# vim: filetype=muttrc
# muttrc file for account rslindee-gmail
set realname = "Richard Slindee"
set from = "rslindee@gmail.com"
set sendmail = "/usr/bin/msmtp -a rslindee-gmail"
set folder = "~/.mail/rslindee-gmail"
set header_cache = "~/.mail/rslindee-gmail/.header_cache"

set mbox_type = Maildir
set ssl_starttls = yes
set ssl_force_tls = yes

set spoolfile = "+INBOX"
set record = "+[Gmail].Sent Mail"
set postponed = "+[Gmail].Drafts"
set trash = "+[Gmail].Trash"
