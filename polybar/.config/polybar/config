[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mybar]
modules-left = bspwm
modules-center = title
modules-right = mpd pulseaudio battery wireless-network date
font-0 = "Terminus:size=10:antialias=false:autohint=false"
; Number of spaces to add before/after each module
module-margin = 1
; The separator will be inserted between the output of each module
separator = â”ƒ

[module/mpd]
type = internal/mpd
host = localhost
port = 6600
format-playing = mpd on
format-paused = mpd off
format-stopped = mpd off

[module/title]
type = internal/xwindow

[module/date]
type = internal/date
date = %m/%d/%y
time = %H:%M
label = %date% %time%

[module/battery]
type = internal/battery
label-charging = CHRG %percentage%%
label-discharging = BATT %percentage%%

[module/wireless-network]
type = internal/network
interface = ${env:DEFAULT_NETWORK_INTERFACE:wlp2s0}
label-connected = %essid% %signal%%

[module/pulseaudio]
type = internal/pulseaudio

label-volume = VOL %percentage%%
label-muted = VOL OFF

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

; vim:ft=dosini
