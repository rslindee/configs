[include]
    path = ~/.gitconfig_private
[push]
    default = current
[core]
    trustctime = false
    editor = vim
    filemode = false
    autocrlf = input
[color]
    ui = true
[credential]
    helper = cache --timeout=3600
[merge]
	tool = vimdiff
    conflictstyle = diff3
[mergetool]
    keeptemporaries = false
	keepBackup = false
    prompt = false
    trustexitcode = true
[alias]
    last = log -1 --stat
    # Delete locally merged branches except current
    dm = !git branch --merged | grep -Ev \"(^\\*|master|^develop)\" | xargs -n 1 git branch --delete
    br = branch
    cp = cherry-pick
    co = checkout
    cl = clone --recursive
    cm = commit
    dc = diff --cached
    df = diff
    dr = push origin --delete
    fc = clean -ffxd
    fe = fetch --prune --tags --all
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative --all
    pl = !git pull && git submodule update --init --recursive
    ps = push --set-upstream
    re = reset --hard HEAD
    sq = rebase --interactive master
    st = status
    su = submodule update --init --recursive
    un = reset HEAD~
    up = !git add --all && git commit --all --message="Update" && git push
[diff]
    tool = vimdiff
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
