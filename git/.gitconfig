[include]
    path = ~/.gitconfig_private
[push]
    default = current
[core]
    trustctime = false
    editor = vim
    filemode = false
    autocrlf = input
[color]
    ui = true
[credential]
    helper = cache --timeout=3600
[merge]
	tool = diffconflicts
    conflictstyle = diff3
[mergetool]
    keeptemporaries = false
	keepBackup = false
    prompt = false
    trustexitcode = true
[alias]
    last = log -1 --stat
    # Delete locally merged branches except current
    dm = !git branch --merged | grep -Ev \"(^\\*|master|^develop)\" | xargs -n 1 git branch -d
    br = branch
    cp = cherry-pick
    co = checkout
    cl = clone --recursive
    cm = commit
    dc = diff --cached
    df = diff
    dr = push origin --delete
    fc = clean -ffxd
    fe = fetch -p
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative --all
    pl = !git pull && git submodule update --init --recursive
    ps = push -u
    re = reset --hard HEAD
    sq = rebase -i master
    st = status
    su = submodule update --init --recursive
    un = reset HEAD~
    up = !git commit -am "Update" && git push
[diff]
    tool = vimdiff
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
