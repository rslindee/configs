[user]
    name = Richard Slindee
[push]
	default = current
[core]
	trustctime = false
	editor = vim
	filemode = false
	autocrlf = input
    excludesfile = ~/.gitignore_global
[color]
	ui = true
[credential]
	helper = cache --timeout=3600
[merge]
	tool = vimdiff
    conflictstyle = diff3
[mergetool]
	keeptemporaries = false
	keepbackup = false
	prompt = false
	trustexitcode = true
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status
	br = branch
	un = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
    su = submodule update --init --recursive
    fc = clean -ffxd
    fe = fetch -p
    re = reset --hard HEAD
[mergetool "bc3"]
    cmd = \"c:/program files (x86)/beyond compare 4/BComp.com\" \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\" /lefttitle=\"$LOCAL\" /righttitle=\"$REMOTE\" /centertitle=\"$BASE\" /outputtitle=\"$MERGED\" /leftreadonly /rightreadonly /centerreadonly
[diff]
	tool = vimdiff
[difftool "bc3"]
    cmd = \"c:/program files (x86)/beyond compare 4/BComp.com\" \"$(cygpath -w \"$LOCAL\")\" \"$(cygpath -w \"$REMOTE\")\" /lefttitle=\"$(cygpath -w \"$LOCAL\")\" /righttitle=\"$(cygpath -w \"$REMOTE\")\" /leftreadonly /rightreadonly
[init]
	templatedir = ~/.git_template
